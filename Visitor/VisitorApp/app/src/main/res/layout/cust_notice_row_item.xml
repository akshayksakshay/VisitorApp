<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="0dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@android:color/transparent"
    android:layout_marginBottom="5dp">

   <LinearLayout
       android:background="@drawable/cardborder"
       android:padding="10dp"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:gravity="center"
           android:orientation="vertical"
           android:background="@drawable/cust_sideroundlayout"
           android:layout_width="50dp"
           android:layout_height="50dp">
           <TextView
               android:fontFamily="serif"
               android:id="@+id/custom_notificationlist_num"
               android:textSize="20dp"
               android:textColor="@color/app_white"
               android:gravity="center"
               android:text="1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
       </LinearLayout>
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:layout_marginLeft="5dp"
               android:gravity="center|left"
               android:fontFamily="serif"
               android:textSize="20dp"
               android:id="@+id/custom_notificationlist_subject"
               android:text="Shop Name"
               android:textColor="@color/blackTextColor"
               android:layout_width="wrap_content"
               android:layout_height="50dp"/>
       <TextView
           android:minLines="3"
           android:fontFamily="sans-serif-light"
           android:id="@+id/custom_notificationlist_details"
           android:text="3rd Floor, Darmodhayam Building,, Shanmugham Road, Marine Drive, Kochi, Kerala 682031"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
       <View
           android:layout_marginVertical="3dp"
           android:layout_marginHorizontal="10dp"
           android:background="@color/ash_white"
           android:layout_width="match_parent"
           android:layout_height="1dp"/>

           <TextView
               android:layout_marginTop="5dp"
               android:fontFamily="serif"
               android:textColor="@color/blackTextColor"
               android:gravity="right"
               android:layout_weight=".5"
               android:id="@+id/custom_notificationlist_date"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="ðŸ“… 2021-02-28" />

       </LinearLayout>

   </LinearLayout>
</androidx.cardview.widget.CardView>
