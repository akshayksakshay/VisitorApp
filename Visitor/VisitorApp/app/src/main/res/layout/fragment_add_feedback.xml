<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_white"
    tools:context=".User.AddFeedbackFragment">
    <TextView
        android:fontFamily="sans-serif-thin"
        android:textSize="35dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/blackTextColor"
        android:text="Feed Back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="25dp"
        android:fontFamily="serif"
        android:textColor="@color/tes"
        android:text="We would love to hear your thoughts, suggestions, concerns or problems with anything so we can improve!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/cust_edittextlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <com.google.android.material.textfield.TextInputEditText
            android:paddingHorizontal="5dp"
            android:background="@android:color/transparent"
            android:id="@+id/addnotice_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Subject"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="20dp"
        android:paddingHorizontal="5dp"
        android:background="@drawable/cust_edittextlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:background="@android:color/transparent"
            android:inputType="textMultiLine"
            android:lines="6"
            android:gravity="left"
            android:id="@+id/addnotice_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Describe your feedback details"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:textColor="@color/app_white"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="35dp"
        android:fontFamily="serif"
        android:background="@drawable/cust_btn1"
        android:id="@+id/addnotice_btnadd"
        android:text="Send"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>