<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_white"
    tools:context=".Admin.AddNoticeFragment">
    <TextView
        android:fontFamily="sans-serif-thin"
        android:textSize="35dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/blackTextColor"
        android:text="Upload Notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="25dp"
        android:fontFamily="serif"
        android:textColor="@color/tes"
        android:text="This is the form to be used by a helth department when notifying an importent sunject to a Normal Vister App Users."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/cust_edittextlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <com.google.android.material.textfield.TextInputEditText
            android:paddingHorizontal="5dp"
            android:background="@android:color/transparent"
            android:id="@+id/addnotice_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Notification"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="20dp"
        android:paddingHorizontal="5dp"
        android:background="@drawable/cust_edittextlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:background="@android:color/transparent"
            android:inputType="textMultiLine"
            android:id="@+id/addnotice_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="7"
            android:gravity="left"
            android:hint="Detailed description about the notification"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="35dp"
        android:fontFamily="serif"
        android:background="@drawable/cust_btn1"
        android:id="@+id/addnotice_btnadd"
        android:text="Submit"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

</LinearLayout>