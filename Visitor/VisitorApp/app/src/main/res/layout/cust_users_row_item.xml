<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="0dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/app_white"
    android:layout_marginBottom="5dp">

   <LinearLayout
       android:padding="7dp"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <ImageView
           android:layout_marginRight="3dp"
           android:src="@drawable/icon_user"
           android:layout_gravity="center"
           android:layout_width="100dp"
           android:layout_height="100dp"/>
       <View
           android:background="@color/ash_white"
           android:layout_width="1dp"
           android:layout_height="match_parent"/>
       <LinearLayout
           android:paddingLeft="5dp"
           android:layout_gravity="center_vertical"
           android:layout_margin="5dp"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:textSize="16dp"
               android:gravity="center|left"
               android:fontFamily="serif"
               android:id="@+id/custom_users_name"
               android:text="Name"
               android:textColor="@color/blackTextColor"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <TextView
               android:maxLines="2"
               android:gravity="left"
               android:fontFamily="serif"
               android:id="@+id/custom_users_address"
               android:text="Address"
               android:textColor="@color/blackTextColor"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <TextView
               android:gravity="center|left"
               android:fontFamily="serif"
               android:id="@+id/custom_users_phone"
               android:text="Phone"
               android:textColor="@color/blackTextColor"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <TextView
               android:gravity="center|left"
               android:fontFamily="serif"
               android:id="@+id/custom_users_email"
               android:text="Email"
               android:textColor="@color/blackTextColor"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>




       </LinearLayout>

   </LinearLayout>
</androidx.cardview.widget.CardView>
