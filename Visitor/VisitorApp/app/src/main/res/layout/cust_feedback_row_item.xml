<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="0dp"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@android:color/transparent"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:background="@drawable/cardborder"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                app:civ_border_color="#ECEBEB"
                android:elevation="5dp"
                android:scaleType="centerCrop"
                android:paddingRight="5dp"
                android:src="@drawable/ic_user_round"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
           <LinearLayout
               android:layout_gravity="center"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:gravity="center|left"
                   android:fontFamily="serif"
                   android:textSize="19dp"
                   android:id="@+id/custom_feedback_name"
                   android:text="Name"
                   android:textColor="@color/blackTextColor"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"/>
               <TextView
                   android:fontFamily="serif"
                   android:gravity="left"
                   android:id="@+id/custom_feedback_submitdate"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="âœ’ 2021-02-28" />
           </LinearLayout>
        </LinearLayout>
        <View
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="2dp"
            android:background="@color/tes"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


        <TextView
            android:textStyle="bold"
            android:fontFamily="serif"
            android:id="@+id/custom_feedback_subject"
            android:text="Subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:maxLines="8"
            android:fontFamily="sans-serif-light"
            android:id="@+id/custom_feedback_details"
            android:text="3rd Floor, Darmodhayam Building,, Shanmugham Road, Marine Drive, Kochi, Kerala 682031"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
