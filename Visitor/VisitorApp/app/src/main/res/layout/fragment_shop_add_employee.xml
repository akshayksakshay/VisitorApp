<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:background="@color/app_white"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Shop.ShopAddEmployeeFragment">
    <TextView
        android:fontFamily="sans-serif-thin"
        android:textSize="35dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/blackTextColor"
        android:text="Add Employee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="25dp"
        android:fontFamily="serif"
        android:textColor="@color/tes"
        android:text="wizard guides you through the process of adding a new employee. You have the flexibility to enter comprehensive information about a new employee as soon as the person joins or first !"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/cust_edittextlayout"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <com.google.android.material.textfield.TextInputEditText
            android:paddingHorizontal="5dp"
            android:background="@android:color/transparent"
            android:id="@+id/shop_add_employee_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/cust_edittextlayout"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <com.google.android.material.textfield.TextInputEditText
            android:paddingHorizontal="5dp"
            android:inputType="number"
            android:maxLength="10"
            android:background="@android:color/transparent"
            android:id="@+id/shop_add_employee_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginHorizontal="15dp"
        android:paddingHorizontal="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/cust_edittextlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:background="@android:color/transparent"
            android:inputType="textMultiLine"
            android:lines="4"
            android:gravity="left"
            android:id="@+id/shop_add_employee_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adddress"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/cust_edittextlayout"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="45dp">
        <com.google.android.material.textfield.TextInputEditText
            android:paddingHorizontal="5dp"
            android:inputType="textEmailAddress"
            android:background="@android:color/transparent"
            android:id="@+id/shop_add_employee_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"/>
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="35dp"
        android:fontFamily="serif"
        android:background="@drawable/cust_btn1"
        android:id="@+id/shop_add_employee_add_btn"
        android:text="Submit"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>


</LinearLayout>
</ScrollView>